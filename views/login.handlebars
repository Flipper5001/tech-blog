<section class="header">
    <h1 class="pl-3">The Tech Blog</h1>
</section>

<section class="post">
  <section class="post-header">
    <h3 class="title">Login</h3>
  </section>

  <form class="form login-form content">
      <label for="user-login">Username:</label>
      <section class="mb-3">
        <input class="form-input" type="text" id="user-login" />
      </section>
      <label for="password-login">password:</label>
      <section class="mb-3">
        <input class="form-input" type="password" id="password-login" />
      </section>
      <button class="submit-btn btn" type="submit">login</button>
  </form>
</section>

<section class="post">
  <section class="post-header">
    <h3 class="title">Signup</h3>
  </section>

  <form class="form signup-form content">
      <label for="user-signup">Username:</label>
      <section class="mb-3">
        <input class="form-input" type="text" id="user-signup" />
      </section>
      <label for="password-signup">password:</label>
      <section class="mb-3">
        <input class="form-input" type="password" id="password-signup" />
      </section>
      <button class="submit-btn btn" type="submit">signup</button>
  </form>
</section>

